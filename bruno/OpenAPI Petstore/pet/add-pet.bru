meta {
  name: Add a new pet to the store
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/pet
  body: json
  auth: none
}

body:json {
  {
    "id": 12345,
    "category": {
      "id": 1,
      "name": "Dogs"
    },
    "name": "Bruno",
    "photoUrls": ["https://example.com/bruno.jpg"],
    "tags": [
      {
        "id": 1,
        "name": "friendly"
      }
    ],
    "status": "available"
  }
}

assert {
  res.status: eq 201
  res.body.id: isDefined
  res.body.name: eq Bruno
  res.body.photoUrls: isArray
  res.body.status: eq available
}

tests {
  test("should return 201 Created", function() {
    expect(res.status).to.equal(201);
  });
  
  test("should return created pet with correct id", function() {
    expect(res.body.id).to.equal(12345);
    bru.setEnvVar('petId', res.body.id);
  });
  
  test("should preserve pet properties", function() {
    expect(res.body.name).to.equal('Bruno');
    expect(res.body.status).to.equal('available');
    expect(res.body.category.name).to.equal('Dogs');
    expect(res.body.photoUrls).to.be.an('array').with.lengthOf(1);
  });
}

