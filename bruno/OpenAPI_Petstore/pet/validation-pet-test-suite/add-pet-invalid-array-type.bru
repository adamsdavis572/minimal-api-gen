meta {
  name: Add Pet - Invalid Array Type
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/pet
  body: json
  auth: bearer
}

auth:bearer {
  token: {{writeToken}}
}

body:json {
  {
    "id": 12345,
    "name": "Fluffy",
    "photoUrls": "not-an-array",
    "status": "available"
  }
}

assert {
  res.status: eq 400
  res.body.type: isDefined
  res.body.title: isDefined
  res.body.status: eq 400
}

tests {
  test("should return 400 when photoUrls is not an array", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(400);
    expect(data.type).to.be.a('string');
    expect(data.title).to.be.a('string');
    expect(data.status).to.equal(400);
  });
}
