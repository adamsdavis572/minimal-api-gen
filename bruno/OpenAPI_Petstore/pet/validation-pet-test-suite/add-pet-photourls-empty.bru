meta {
  name: Add Pet - Empty PhotoUrls Array (minItems)
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/pet
  body: json
  auth: bearer
}

auth:bearer {
  token: {{writeToken}}
}

body:json {
  {
    "id": 12345,
    "name": "Fluffy",
    "photoUrls": [],
    "status": "available"
  }
}

assert {
  res.status: eq 400
  res.body.type: isDefined
  res.body.title: isDefined
  res.body.status: eq 400
  res.body.errors.PhotoUrls: isDefined
}

tests {
  test("should return validation error when photoUrls array is empty", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(400);
    expect(data.errors).to.be.an('object');
    expect(data.errors.PhotoUrls).to.be.an('array');
    expect(data.errors.PhotoUrls[0]).to.include('required');
  });
}
