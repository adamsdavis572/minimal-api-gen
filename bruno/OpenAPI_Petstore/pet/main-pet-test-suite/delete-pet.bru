delete {
  url: {{baseUrl}}/pet/:petId
  body: none
  auth: bearer
}

auth:bearer {
  token: {{writeToken}}
}

params:path {
  petId: {{petId}}
}

assert {
  res.status: eq 204
}

tests {
  test("should return 204 No Content", function() {
    expect(res.status).to.equal(204);
  });
}

