meta {
  name: Update an existing pet
  type: http
  seq: 4
}

put {
  url: {{baseUrl}}/pet
  body: json
  auth: none
}

body:json {
  {
    "id": 12345,
    "category": {
      "id": 1,
      "name": "Dogs"
    },
    "name": "Bruno Updated",
    "photoUrls": ["https://example.com/bruno.jpg"],
    "tags": [
      {
        "id": 1,
        "name": "friendly"
      },
      {
        "id": 2,
        "name": "updated"
      }
    ],
    "status": "sold"
  }
}

assert {
  res.status: eq 200
  res.body.id: eq 12345
  res.body.name: eq Bruno Updated
  res.body.status: eq sold
}

tests {
  test("should return 200 OK", function() {
    expect(res.status).to.equal(200);
  });
  
  test("should return updated pet with correct data", function() {
    expect(res.body.id).to.equal(12345);
    expect(res.body.name).to.equal('Bruno Updated');
    expect(res.body.status).to.equal('sold');
    expect(res.body.tags).to.be.an('array').with.lengthOf(2);
  });
}

