meta {
  name: Add Pet - Empty Body
  type: http
  seq: 10
}

post {
  url: {{baseUrl}}/pet
  body: none
  auth: none
}

assert {
  res.status: eq 400
  res.body.type: isDefined
  res.body.title: isDefined
  res.body.status: eq 400
}

tests {
  test("should return 400 when request body is missing", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(400);
    expect(data.type).to.be.a('string');
    expect(data.title).to.be.a('string');
    expect(data.status).to.equal(400);
  });
}
